<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:backgroundTint="@color/Black"
    app:cardCornerRadius="30dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="148dp">

        <!-- Your existing layout content here -->

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/PhotoProduct1"
            android:layout_width="92dp"
            android:layout_height="103dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="81dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/PhotoProduct1TXTDecscription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/PhotoProduct1TXTName"
            android:layout_width="203dp"
            android:layout_height="26dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="71dp"
            android:layout_toEndOf="@+id/PhotoProduct1"
            android:text="Name"
            android:textAlignment="viewStart"
            android:textColor="@color/White"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/PhotoProduct1"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <TextView
            android:id="@+id/PhotoProduct1TXTDecscription"
            android:layout_width="269dp"
            android:layout_height="39dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@+id/PhotoProduct1"
            android:text="This Product Made In Egypt"
            android:textAlignment="viewStart"
            android:textColor="@color/White"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/PhotoProduct1"
            app:layout_constraintTop_toBottomOf="@+id/PhotoProduct1TXTPrice" />

        <TextView
            android:id="@+id/PhotoProduct1TXTPrice"
            android:layout_width="214dp"
            android:layout_height="28dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="3dp"
            android:layout_toEndOf="@+id/PhotoProduct1"
            android:text="100 EGP"
            android:textAlignment="viewStart"
            android:textColor="@color/White"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/PhotoProduct1TXTDecscription"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.662"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/PhotoProduct1TXTName" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/PhotoProduct1"
            android:layout_marginBottom="5dp"
            android:background="@color/Black"
            app:layout_constraintBottom_toTopOf="@+id/PhotoProduct1TXTName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
